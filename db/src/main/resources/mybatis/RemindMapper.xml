<mapper namespace="cn.harry12800.scan.mapper.RemindMapper">
	<select id='findById' resultMap='Remind'  parameterType='java.lang.String'>
		select  id,title,detail,type,create_time,update_time,lunar,time from scan.remind  where id = #{id}
	</select>
	<select id='findBySql' parameterType='java.lang.String'  resultMap='Remind' >
		 ${value}
	</select>
	<select id='findAll' resultMap='Remind' >
		select id,  titleï¼Œdetail,type,create_time,update_time, lunar, time from scan.remind
	</select>
	<insert id='save' parameterType='cn.harry12800.scan.entity.Remind'>
		insert into scan.remind(
		 id,  title,  detail,  type,  create_time,  update_time,  lunar,   time)
		values(#{id},
		#{title},
		#{detail},
		#{type},
		#{createTime},
		#{updateTime},
		#{lunar},
		#{time}
		)
	</insert>
	<update id='update' parameterType='cn.harry12800.scan.entity.Remind'>
		update scan.remind set
		 id=#{id},
		 		 title=#{title},
		 		 detail=#{detail},
		 		 type=#{type},
		 		 create_time=#{createTime},
		 		 update_time=#{updateTime},
		 		 lunar=#{lunar},
		 		 
		 time=#{time}
		 where id=#{id}
	</update>
	<delete id='deleteByIds' parameterType='java.lang.String'>
		delete from scan.remind where  #{value}
	</delete>
	<resultMap type='cn.harry12800.scan.entity.Remind' id='Remind'>
			<result property='id' column='id'/>
			<result property='title' column='title'/>
			<result property='detail' column='detail'/>
			<result property='type' column='type'/>
			<result property='createTime' column='create_time'/>
			<result property='updateTime' column='update_time'/>
			<result property='lunar' column='lunar'/>
			<result property='time' column='time'/>
	</resultMap>
</mapper>
	